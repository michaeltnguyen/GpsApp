<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        style="@style/LocationItemCell"
        android:orientation="vertical">

        <TextView
            android:id="@+id/location_date_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="2021-01-01"/>

        <TextView
            android:id="@+id/location_time_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="9:30 AM"/>

    </LinearLayout>

    <LinearLayout
        style="@style/LocationItemCell"
        android:orientation="vertical">

        <TextView
            android:id="@+id/location_lat_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="37.4"/>

        <TextView
            android:id="@+id/location_long_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="122.0"/>

    </LinearLayout>


    <LinearLayout
        style="@style/LocationItemCell"
        android:orientation="vertical">

         <TextView
            android:id="@+id/location_bearing_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="36.5"/>

         <TextView
            android:id="@+id/location_speed_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="60"/>

    </LinearLayout>

     <TextView
        android:id="@+id/location_provider_text"
        android:layout_gravity="center"
        style="@style/LocationItemCell"
        tools:text="GPS"/>
</LinearLayout>
